<%= render 'layouts/errors', object: @ticket %>


<div class="container">
  <div class="row login">
    <div class="col-sm-12">
      <h1>New Ticket</h1>
        <h1> Create a Repair Ticket! </h1>
        <%= form_for @ticket do |f| %>
        <%= f.label :location %>
        <%= f.text_field :location %>
        <%= f.label :location_notes %>
        <%= f.text_area :location_notes %>
        <%= f.label :problem %>
        <%= f.text_field :problem %>
        <%= f.label :bicycle_id %>
        <%= f.number_field :bicycle_id %>
        <%= f.submit "Create" %>
        <% end %>
    </div>
  </div>
</div>
